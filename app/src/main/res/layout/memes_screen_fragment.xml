<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/memes_screen_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:paddingStart="@dimen/spacing_6x"
    android:paddingEnd="@dimen/spacing_6x">

    <TextView
        android:id="@+id/title"
        style="@style/TextView.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_memes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/meme_descriptions"
        style="@style/TextView.Descriptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_descriptions"
        android:gravity="center"
        android:padding="@dimen/spacing_4x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="@string/descriptions" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_memes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_12x"
        android:layout_marginBottom="@dimen/spacing_12x"
        app:layout_constraintBottom_toTopOf="@+id/scannerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/meme_descriptions"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Group
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="scannerView"
        />

    <ru.androidacademy.droidfactory.views.CameraSourcePreview
        android:id="@+id/scannerView"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        />

    <ru.androidacademy.droidfactory.views.GraphicOverlay
        android:id="@+id/graphic_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/scannerView"
        app:layout_constraintStart_toStartOf="@id/scannerView"
        app:layout_constraintEnd_toEndOf="@id/scannerView"
        app:layout_constraintBottom_toBottomOf="@id/scannerView"
        />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress_bar"
        style="@style/ProgressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

    </androidx.core.widget.ContentLoadingProgressBar>

</androidx.constraintlayout.widget.ConstraintLayout>